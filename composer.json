{
	"name" : "viames/pair_boilerplate",
	"description" : "Skeleton project based on Pair PHP framework",
	"type" : "project",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"viames/pair": "dev-main"
	},
	"scripts": {
        "post-install-cmd": [
			"php migrate-cli.php"       
		],
        "post-update-cmd": [
			"php migrate-cli.php"
        ]
	},
	"autoload": {
		"classmap": [
			"classes/",
			"modules/*/classes/"
		],
		"exclude-from-classmap": [
			"modules/*/assets/",
			"modules/*/layouts/",
			"modules/*/translations/"
		]
	},
	"repositories" : [

		{
			"type" : "vcs",
			"url" : "https://github.com/viames/pair_boilerplate"
		}
	],
	"license" : "MIT",
	"keywords" : [
		"pair",
		"php",
		"multilingual",
		"framework",
		"active-record",
		"plugin-system",
		"pagination",
		"router",
		"rest-api",
		"oauth2"
	],
	"homepage" : "https://github.com/viames/pair_boilerplate",
	"authors" : [
		{
			"name" : "Viames Marino",
			"role" : "Developer"
		}
	],
	"config": {
		"allow-plugins": {
			"php-http/discovery": true
		}
	}
}
